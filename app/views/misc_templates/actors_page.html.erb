<html>
<head>
<title>
Actors
</title>
</head>


<body>
<h1>List of all actors</h1>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% Actor.all.each do |the_actor|%>

  <tr>
    <td>
      <%= the_actor.id %>
    </td>

    <td>
      <img src=<%= the_actor.image %> width="250px"; height="375px">
    </td>

    <td>
      <%= the_actor.name %>
    </td>

    <td>
      <%= the_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= the_actor.id %>">
        Show details
      </a>
    </td>
  </tr>

  <% end %>

</table>

</body>
</html>
