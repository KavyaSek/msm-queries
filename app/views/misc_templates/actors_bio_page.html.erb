
<!DOCTYPE html>
<html>
  <head>
    <title>Target: MSM Queries</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
    
    <h1>
  Actor #<%= @actor_id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
     <%= Actor.find(@actor_id).name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= Actor.find(@actor_id).dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%= Actor.find(@actor_id).bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= Actor.find(@actor_id).image %> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= Actor.find(@actor_id).created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= Actor.find(@actor_id).updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

<% Character.where(actor_id: @actor_id).each do |the_char|%>

  <tr>
    <td>
      <%= Movie.find(the_char.movie_id).title %>
    </td>

    <td>
      <%= Movie.find(the_char.movie_id).year %>
    </td>

    <td>
      <%= Director.find(Movie.find(the_char.movie_id).director_id).name %>
    </td>
    
    <td>
      <%= the_char.name %>
    </td>

    <td>
      <a href="/movies/<%= the_char.movie_id %>">
        Show details
      </a>
    </td>
    
  </tr>

  <% end %>

  </table>

  </body>
</html>
