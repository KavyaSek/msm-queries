<html>
<head>
<title>
Movies
</title>
</head>


<body>
<h1>List of all movies</h1>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>
   
    <th>
    </th>
  </tr>

  <% Movie.all.each do |the_movie|%>

  <tr>
    <td>
      <%= the_movie.id %>
    </td>

    <td>
      <img src=<%= the_movie.image %> width="250px"; height="375px">
    </td>

    <td>
      <%= the_movie.title %>
    </td>

    <td>
      <%= the_movie.year %>
    </td>

    
    <td>
      <%= Director.find(the_movie.director_id).name %>
    </td>

    <td>
      <a href="/movies/<%= the_movie.id %>">
        Show details
      </a>
    </td>
  </tr>

  <% end %>

</table>

</body>
</html>
